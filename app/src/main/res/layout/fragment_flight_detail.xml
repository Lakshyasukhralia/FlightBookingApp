<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="flightViewModel"
            type="com.sukhralia.flightsearch.flight.viewmodel.FlightViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        tools:context=".flight.FlightDetailFragment">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/flight_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fare" />

        <Button
            android:id="@+id/fare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/theme_button"
            android:drawableRight="@drawable/ic_up_arrow"
            android:padding="6dp"
            android:text="Fare"
            app:layout_constraintEnd_toStartOf="@+id/departure_time"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/arrival_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:background="@drawable/theme_button"
            android:drawableRight="@drawable/ic_up_arrow"
            android:padding="6dp"
            android:text="Landing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/departure_time"
            app:layout_constraintTop_toTopOf="@+id/fare" />

        <Button
            android:id="@+id/departure_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Take Off"
            android:background="@drawable/theme_button"
            android:padding="6dp"
            android:drawableRight="@drawable/ic_up_arrow"
            app:layout_constraintEnd_toStartOf="@+id/arrival_time"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/fare"
            app:layout_constraintTop_toTopOf="@+id/fare" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/flight_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/flight_list" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>